rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // =================================================
    // 🔐 HELPER FUNCTIONS
    // =================================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdminSafe() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isAdmin() {
      return isAdminSafe();
    }

    function isHospitalOwner(hospitalId) {
      return isAuthenticated() &&
             request.auth.uid == hospitalId;
    }

    function isAppointmentHospital() {
      return isAuthenticated() &&
             resource.data.hospitalId == request.auth.uid;
    }

    // =================================================
    // 🏥 HOSPITALS
    // =================================================
    match /hospitals/{hospitalId} {

      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                    request.auth.uid == hospitalId;

      allow update: if isHospitalOwner(hospitalId) || isAdmin();

      allow delete: if isAdmin();
    }

    // =================================================
    // 👨‍⚕️ DOCTORS
    // =================================================
    match /doctors/{doctorId} {

      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
                    request.resource.data.hospitalId == request.auth.uid;

      allow update: if isAuthenticated() &&
                    resource.data.hospitalId == request.auth.uid;

      allow delete: if isAuthenticated() &&
                    resource.data.hospitalId == request.auth.uid;
    }

    // =================================================
    // 📅 APPOINTMENTS
    // =================================================
    match /appointments/{appointmentId} {

      // User or hospital or admin can read
      allow read: if isAuthenticated() &&
                  (
                    request.auth.uid == resource.data.userId ||
                    request.auth.uid == resource.data.hospitalId ||
                    isAdmin()
                  );

      // Only authenticated users create for themselves
      allow create: if isAuthenticated() &&
                    request.auth.uid == request.resource.data.userId;

      // Hospital can update status
      allow update: if isAuthenticated() &&
                    (
                      request.auth.uid == resource.data.hospitalId ||
                      isAdmin()
                    );

      allow delete: if isAdmin();
    }

    // =================================================
    // 👤 USERS
    // =================================================
    match /users/{userId} {

      allow read, write: if isAuthenticated();

      match /chats/{chatId} {
        allow read, write: if isAuthenticated() &&
                           request.auth.uid == userId;
      }

      match /call_requests/{requestId} {
        allow read, write: if isAuthenticated() &&
                           request.auth.uid == userId;
      }
    }

    // =================================================
    // 👥 DONORS
    // =================================================
    match /donors/{donorId} {

      allow read: if isAuthenticated() || isAdmin();

      allow create: if isAuthenticated() &&
                    request.auth.uid == donorId;

      allow update: if (isAuthenticated() && request.auth.uid == donorId) || isAdmin();

      allow delete: if isAdmin();
    }

    // =================================================
    // 📞 CALL REQUESTS
    // =================================================
    match /call_requests/{requestId} {

      allow create: if isAuthenticated() &&
                    request.auth.uid == request.resource.data.requesterId;

      allow read: if isAuthenticated() &&
                  (
                    request.auth.uid == resource.data.requesterId ||
                    request.auth.uid == resource.data.donorId ||
                    isAdmin()
                  );

      allow update, delete: if isAdmin();
    }

    // =================================================
    // 🔔 NOTIFICATIONS
    // =================================================
    match /notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }

    // =================================================
    // 📚 PUBLIC READ COLLECTIONS
    // =================================================
    match /categories/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /medical_conditions/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /conditions/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /resources/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /emergency_numbers/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /app_config/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // =================================================
    // 💬 GLOBAL CHATS
    // =================================================
    match /chats/{doc} {
      allow read, write: if isAuthenticated();
    }

    // =================================================
    // 📊 LOGGING & ANALYTICS
    // =================================================
    match /user_sessions/{doc} {
      allow read, write: if isAuthenticated();
    }

    match /emergency_logs/{doc} {
      allow write: if isAuthenticated();
      allow read: if isAdmin();
    }

    match /search_logs/{doc} {
      allow write: if isAuthenticated();
      allow read: if isAdmin();
    }

    match /user_activity/{doc} {
      allow write: if isAuthenticated() &&
                    request.auth.uid == doc;
      allow read: if isAdmin();
    }

    match /admin_audit_logs/{doc} {
      allow read, write: if isAdmin();
    }

    // =================================================
    // 🚫 BLOCKED EMAILS
    // =================================================
    match /blocked_emails/{email} {
      allow read: if true;
      allow write: if false;
    }

    // =================================================
    // ❌ CATCH ALL
    // =================================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}